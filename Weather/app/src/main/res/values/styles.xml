<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleFontSize">24sp</item>
        <item name="temperatureFontSize">26sp</item>
        <item name="locationFontSize">18sp</item>
        <item name="weatherDescriptionFontSize">16sp</item>
        <item name="weekdayFontSize">12sp</item>
        <item name="weekdayTempFontSize">12sp</item>
        <item name="extendedWeatherNumFontSize">20sp</item>
        <item name="extendedWeatherName">12sp</item>
    </style>
    <!-- Base application theme. -->
    <style name="BaseTheme.LightTheme">
        <item name="titleBackgroundColor">@color/white</item>
        <item name="secondaryBackgroundColor">@color/white</item>
        <item name="mainBackgroundColor">@color/lightestBlueBackgroundColor</item>
        <item name="mainTextColor">@color/lightGrayText</item>
        <item name="forecastTextColor">@color/lightGrayText</item>
    </style>

    <style name="BaseTheme.DarkTheme">
        <item name="titleBackgroundColor">@color/deepNightBackground</item>
        <item name="secondaryBackgroundColor">@color/calmNightBackground</item>
        <item name="mainBackgroundColor">@color/nightBackground</item>
        <item name="mainTextColor">@color/lightNightText</item>
        <item name="forecastTextColor">@color/lightBlueText</item>
    </style>
</resources>